<% if @passenger_version != '' -%>
<IfModule mod_passenger.c>
   PassengerRoot /usr/lib/ruby/gems/1.8/gems/passenger-<%= @passenger_version %>
   PassengerRuby /usr/bin/ruby
   PassengerTempDir /var/run/rubygem-passenger
</IfModule>
<% end -%>

